<Window x:Class="WPF___Övning_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF___Övning_1"
        mc:Ignorable="d"
        Title="WPF Övning 1" Height="600 " Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="headerTextBox" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Text="WPF Övning 1" TextAlignment="Center" Background="#FF96BD45" FontSize="36" FontFamily="Calibri"/>
        <TextBox x:Name="myLeftTextBox" Grid.Row="1" Grid.Column="0" Width="auto" Margin="10,10,10,10" FontSize="14"/>
        <TextBox x:Name="myRightTextBox" Grid.Row="1" Grid.Column="2" Width="auto" Margin="10,10,10,10" FontSize="14"/>
        <Button x:Name="myOnlyButton" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" Content="Click Me!" Width="100"  Height="50" Click="myOnlyButton_Click"/>
           
    </Grid>
</Window>
